<section class="card">
  <h3> Edit Post</h3>
<form class="edit-post-form">

    <div>
      <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{post.content}}" class="form-input" />
     <div>
        
        Posted by you on {{format_date post.created_at}} |
        {{post.comments.length}}  {{format_words "comment" post.comments.length}}

    </div>
    
    <button type ="submit" class="btn">Save Changes</button> 
    <button type ="button" class="delete-btn btn">Delete </button> 
    </form>

</section>
    
  

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>